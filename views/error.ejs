<% layout('layouts/boilerplate')%>
<div class="row">
    <div class="col-6 offset-3">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">ERROR</h4>
            <p><%= err.message  %> </p>
            <% if (process.env.NODE_ENV !== "production") { %> 
            <hr>
            <p class="mb-0"><%= err.statusCode  %> </p>
            <p><%= err.stack  %> </p>
            <% } %> 
        </div>
    </div>
</div>